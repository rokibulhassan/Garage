%a.show-picture.thumbnail{ href: '#' }
  - source = @picture.get('thumb_url')
  - hasUrl = if @picture.get('thumb_url') then 'has-url' else 'no-url'
  %img{ class: hasUrl, src: source, alt: @picture.altText(), style: 'width: 180px; height: 135px;' }

- if @picture.get('upload_progress')
  .progress.progress-success.progress-striped.active{ style: 'position: absolute; bottom: 0; left: 0; width: 100%' }
    .bar{ style: 'width: 0%;' }

- commented = @picture.get('comments_size') > 0
- liked = commented
- if liked or commented
  .picture-bar-fade
  .picture-bar
    - if commented
      %img.pull-right{ src: "<%= image_path('galleries/icon-comment.png') %>" }
      %span.pull-right.comments-size
        = @picture.get('comments_size')
    - if liked
      %img.pull-right{ src: "<%= image_path('galleries/icon-like.png') %>" }
      %span.pull-right
        = @picture.get('comments_size')
